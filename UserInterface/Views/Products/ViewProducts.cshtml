@model  UserInterface.ViewModel.ViewProductsViewModel
@{
    ViewBag.Title = "ViewProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/ProductSheet.css" rel="stylesheet" />
<h2 >Products</h2>
<hr />

<div class="filters">

</div>

@foreach (var items in Model.Products)
{
    <div class="box">

        <div class="col-md-3 thumbnail display">
            <img style="width:300px; height:300px;" src="@Url.Content(items.ProductImage)" class="img-rounded" alt="Waterfall" />


            <div id="item">
                <div class="caption Name">
                    <h4> <span class="caption Name"> @items.ProductName </span></h4>
                </div>

                <div class="caption">
                    <span>@items.ProductDescription </span>
                </div>

                <div class="caption">
                    <span class="btn-danger">Rs. @items.ProductPrice/-</span>&nbsp;&nbsp;&nbsp;
                    <label>size</label>
                    <select name="" id="" class="">
                        @if (@items.ProductSize.S == 0)
                        {
                            <option disabled>S</option>
                        }
                        else
                        {

                            <option value="S">S</option>
                        }
                        @if (@items.ProductSize.M == 0)
                        {
                            <option disabled>M</option>
                        }
                        else
                        {

                            <option value="M">M</option>
                        }
                        @if (@items.ProductSize.L == 0)
                        {
                            <option disabled>L</option>
                        }
                        else
                        {

                            <option value="L">L</option>
                        }
                        @if (@items.ProductSize.Xl == 0)
                        {
                            <option disabled>Xl</option>
                        }
                        else
                        {

                            <option value="Xl">Xl</option>
                        }
                    </select>

                </div>
            </div>
            <div>
                <a href="@Url.Action("BuyNow", "User", items)" class="btn btn-lg btn-block btn-warning button">Buy Now</a>
                <a href="@Url.Action("AddToCart","Cart", items)" class="btn btn-lg btn-block button btn-orange">Add To Cart </a>
                @*<a href="@Url.Action("AddToWishlist", "User", items)" class="btn btn-lg btn-block button btn-warning">Wishlist</a>*@
            </div>
        </div>
    </div>
}


