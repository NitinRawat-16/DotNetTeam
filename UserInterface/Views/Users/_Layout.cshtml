<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image:url(~/Images/BackgroundImages/back.jpg)">
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="logo-div">
            @*<div>
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Images/LOGOFINAL.png" alt="Site Logo" class="logo-image" />
                    </a>
                </div>*@

            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Online Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Products", "ShowProducts", "Users")</li>
                        <li>@Html.ActionLink("Wishlist", "ViewWishlist", "Wishlist")</li>
                        <li>@Html.ActionLink("Orders", "Orders", "Users")</li>
                        <li>
                            <a href="@Url.Action("ViewCart", "Cart")" role="button" aria-expanded="false">
                                Cart
                                <span class="glyphicon glyphicon-shopping-cart"></span>@Request.Cookies["count"].Values
                            </a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)



</body>
</html>

