@model IList<DataModelLayer.ProductWishlist>
@{
    ViewBag.Title = "ViewWishlist";
    Layout = "~/Views/Users/_Layout.cshtml";
}
<div class="col-lg-12">
    <h2>Wishlist</h2>
    <hr />
    @if (!Model.Any())
    {
        <h3>No items in the wishlist</h3>
    }
    else
    {
        <link href="~/Content/ProductSheet.css" rel="stylesheet" />
        <hr />



        foreach (var items in Model)
        {
            <div class="box">

                <div class="col-md-3 thumbnail display">
                    <img style="width:200px; height:200px;" src="@Url.Content(items.Product.ProductImage)" class="img-rounded" alt="Waterfall" />


                    <div id="item">
                        <div class="caption Name">
                            <h4> <span class="caption Name"> @items.Product.ProductName </span></h4>
                        </div>

                        <div class="caption">
                            <span>@items.Product.ProductDescription </span>
                        </div>

                        <div class="caption">
                            <span class="btn-danger">Rs. @items.Product.ProductPrice/-</span>&nbsp;&nbsp;&nbsp;


                        </div>
                    </div>
                    <div>

                        <span class="btn btn-lg btn-block button ">
                            @if (items.Product.ProductAvailability != 0)
                            {
                                <a href="@Url.Action("AddToCart", "Wishlist", items.Product)" id="cart"
                                   class="glyphicon glyphicon-shopping-cart"
                                   style="margin:30px; color:Black;">
                                    <i class="bi bi-cart-plus"></i>Rs.@items.Product.ProductPrice.ToString()/-
                                </a>
                            }
                            else
                            {
                                <span class="btn btn-lg btn-block button">Out Of Stock!</span>

                            }
                            <br />
                            <a style="margin-top:40px; margin-left:25px;" href="@Url.Action("RemoveItemById","Wishlist",items.Product)">Remove</a>
                        </span>
                    </div>
                </div>
            </div>
        }



    }
    <hr />
</div>
